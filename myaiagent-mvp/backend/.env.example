# ===========================================
# MY AI AGENT - AWS DEPLOYMENT CONFIG
# ===========================================
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Database (PostgreSQL on localhost or AWS RDS)
DATABASE_URL=postgresql://your_db_user:your_password@localhost:5432/myaiagent

# Security (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))")
JWT_SECRET=your_jwt_secret_here
HMAC_SECRET=your_hmac_secret_here
CSRF_SECRET=your_csrf_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS (Production - same origin, no need for CORS)
CORS_ORIGINS=

# Rate Limiting
RATE_LIMIT_MESSAGES=100
RATE_LIMIT_VOICE_MINUTES=30
VOICE_SESSION_MAX_MINUTES=10

# File Upload
MAX_FILE_SIZE_MB=20

# Google Cloud Credentials (Service Account JSON)
# Option 1: File path (recommended)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option 2: Inline JSON (if you can't use file path)
# GOOGLE_APPLICATION_CREDENTIALS_JSON='{"type":"service_account",...}'

# Google APIs
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CUSTOM_SEARCH_API_KEY=your_custom_search_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_search_engine_id_here

# OpenAI (if using for voice features)
OPENAI_API_KEY=your_openai_api_key_here

# OAuth 2.0 (Google Services Integration)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

# Production Domain (for OAuth callbacks)
PRODUCTION_DOMAIN=https://your-domain.com
